citHeader("To cite lifecontingencies in publications use:")

citEntry(entry = "Article",
  title        = "The {lifecontingencies} Package: Performing Financial and Actuarial Mathematics Calculations in {R}",
  author       = personList(as.person("Giorgio Alfredo Spedicato")),
  journal      = "Journal of Statistical Software",
  year         = "2013",
  volume       = "55",
  number       = "10",
  pages        = "1--36",
  url          = "http://www.jstatsoft.org/v55/i10/",

  textVersion  =
  paste("Giorgio Alfredo Spedicato (2013).",
        "The lifecontingencies Package: Performing Financial and Actuarial Mathematics Calculations in R.",
        "Journal of Statistical Software, 55(10), 1-36.",
        "URL http://www.jstatsoft.org/v55/i10/.")
)
    
